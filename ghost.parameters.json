{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "pkgURL": {
        "value": "https://github.com/GitarPlayer/azure-function-ghost/archive/refs/tags/0.0.6.zip"
      },
      "storageAccountSku": {
        "value": "Standard_RAGRS"
      },
      "applicationNamePrefix": {
        "value": "ghost"
      },
      "appServicePlanSku": {
        "value": "P3v2"
      },
      "logAnalyticsWorkspaceSku": {
        "value": "PerGB2018"
      },
      "mySQLServerSku": {
        "value": "Standard_D2ds_v4"
      },
      "geoRedundantBackup": {
        "value": "Enabled"
      },
      "highAvailabilityMode": {
        "value": "ZoneRedundant"
      },
      "ghostContainerName": {
        "value": "andrewmatveychuk/ghost-ai:latest"
      },
      "containerRegistryUrl": {
        "value": "https://index.docker.io/v1"
      },
      "deploymentConfiguration": {
        "value": "Web app with Azure Front Door"
      },
      "retentionInDays": {
        "value": 90
      },
      "ghostApiVersion": {
        "value": "v4.0"
      }
    }
}